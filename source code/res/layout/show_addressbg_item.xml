<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="65dip">
    
           
        <TextView 
          android:id="@+id/tv_promptUpdate"
          android:textSize="18sp"
          android:textColor="@android:color/black"
          android:layout_marginLeft="8dip"
          android:layout_marginTop="8dip"
          android:layout_width="wrap_content"
    	  android:layout_height="wrap_content"  
    	  android:text="归属地提示框风格"
            />
        
        <TextView 
          android:id="@+id/tv_promptUpdateDesc"
          android:textSize="16sp"
          android:textColor="#A9A9A9"
          android:layout_below="@id/tv_promptUpdate"
          android:layout_marginLeft="10dip"
          android:layout_width="wrap_content"
    	  android:layout_height="wrap_content"  
    	  android:text="我是描述"
            />
        
        <!--将CheckBox设置不可以被点击，因为在设置中心只是当点击整个组合控件的时候才保存设置的值，单单点击CheckBox不起效  -->
        <ImageView
          android:src="@drawable/jiantou1_pressed" 
          android:id="@+id/iv_jiantou"
          android:clickable="false"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_width="wrap_content"
    	  android:layout_height="wrap_content"  
            />
        
        <View 
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_alignParentBottom="true"
            android:layout_width="fill_parent"
            android:layout_height="0.2dip"
            android:background="#000000"
            
            />

</RelativeLayout>
