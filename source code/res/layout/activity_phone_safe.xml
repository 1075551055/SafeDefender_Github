<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneSafeActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:background="#8866ff66"
        android:gravity="center"
        android:text="手机防盗"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:text="安全号码"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_contactPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:text="111"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:layout_marginRight="5dip"
        android:background="#55000000" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:text="防盗保护是否开启"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_isOpenProtect"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/unlock"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="8dip"
        android:background="#55000000" />
    
    <!--要想让TextView可以被点击必须设置clickable="true"  -->
     <TextView
         android:background="@drawable/shapeselector"
         android:clickable="true"
         android:onClick="reSetup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:text="重新进入设置向导"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
     
      <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:layout_marginRight="5dip"
        android:background="#55000000" />
      
       <TextView
           android:background="#44000000"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:text="功能简介"
            android:textColor="@android:color/black"
            android:textSize="22sp" />
       
       <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/PhoneSafeSetupOneTextViewStyle"
        android:text="GPS追踪:#*location*#" />
    
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/PhoneSafeSetupOneTextViewStyle"
        android:text="播放报警音乐:#*alarm*#" />
    
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/PhoneSafeSetupOneTextViewStyle"
        android:text="远程数据销毁:#*wipedata*#" />
    
    <TextView
        android:drawableLeft="@android:drawable/star_big_on"
        style="@style/PhoneSafeSetupOneTextViewStyle"
        android:text="远程锁屏:#*lockscreen*#" />

</LinearLayout>